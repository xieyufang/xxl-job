<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="KettleJobInfoMapper">
    <resultMap id="KettleJobInfo" type="com.xxl.job.admin.core.model.KettleJobInfo" >
        <result column="id_job" property="id" />
        <result column="id_directory" property="idDirectory" />
        <result column="description" property="name" />
        <result column="extended_description" property="extendedDescription" />
        <result column="job_version" property="version" />
        <result column="job_status" property="status" />
        <result column="create_date" property="createDate" />
        <result column="modified_date" property="modifiedDate" />
    </resultMap>

    <sql id="Base_Column_List">
        t.id_transformation,
        t.id_directory,
        t.description,
        t.extended_description,
        t.trans_version,
        t.trans_status,
        t.create_date,
        t.modified_date
    </sql>

    <select id="findAll" resultMap="KettleTransInfo">
        SELECT
        <include refid="Base_Column_List" />
        FROM r_transformtion t
        ORDER BY t.modified_date ASC
    </select>

    <select id="findByJobId">
        SELECT
        <include refid="Base_Column_List" />
        FROM r_transformtion t
        INNER JOIN

    </select>

    <select id="load" resultMap="KettleTransInfo" parameterType="java.lang.Integer">
        SELECT
        <include refid="Base_Column_List" />
        FROM r_transformtion t
        WHERE t.id_transformation = #{id}
    </select>
</mapper>